{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src-v4-backup/**",
    "public-dashboard/**", 
    "tests/**",
    "**/*.spec.ts",
    "node_modules/**",
    "dist/**"
  ]
} 